<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ohj1v0._1.Varaukset"
             Title="Varaukset">
    <ScrollView>
        <VerticalStackLayout
         Spacing="25"
         Padding="30,0"
         VerticalOptions="Center"
            x:Name="VerticalStack">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid
                    Padding="10"
                    x:Name="entry_grid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label
                        Text="ID"/>

                    <Frame
                        Grid.Row="1"
                        CornerRadius="5"/>

                    <Label                        
                    x:Name="id"
                    Text=""
                    Padding="10"
                    VerticalTextAlignment="Center"
                    Grid.Row="1"/>

                    <Label
                        Text="Alue"
                        Grid.Column="1"
                        Grid.Row="0"/>

                    <Picker 
                        x:Name="alue_nimi"
                        Grid.Column="1"
                        Grid.Row="1"
                        ItemsSource="{Binding Alues}"
                        ItemDisplayBinding="{Binding Nimi}">
                    </Picker>

                    <Label
                         Text="Etunimi"
                         Margin="0,5,0,0"
                         Grid.Row="2"/>

                    <Entry
                         x:Name="etunimi"
                         Text=""
                        MaxLength="20"
                        TextChanged="etunimi_TextChanged"
                         Grid.Row="3"
                         Grid.Column="0" 
                         HorizontalOptions="FillAndExpand"
                         IsReadOnly="True"/>

                    <Label
                         Text="Sukunimi"
                         Margin="0,5,0,0"
                         Grid.Row="2"
                         Grid.Column="1"/>

                    <Entry
                         x:Name="sukunimi"
                         Text=""
                        MaxLength="40"
                        TextChanged="sukunimi_TextChanged"
                         Grid.Row="3"
                         Grid.Column="1" 
                         HorizontalOptions="FillAndExpand"
                         IsReadOnly="True"/>

                    <Label
                         Text="Puhelinnumero"
                         Margin="0,5,0,0"
                         Grid.Row="4"/>

                    <Entry
                         x:Name="puhelinnumero"
                         Text=""
                        MaxLength="15"
                         Grid.Row="5"
                        TextChanged="puhelinnumero_TextChanged"
                         Grid.ColumnSpan="2" 
                         HorizontalOptions="FillAndExpand"
                         IsReadOnly="True"/>

                    <Label
                         Text="Sähköposti"
                         Margin="0,5,0,0"
                         Grid.Row="6"/>
                    
                    <Entry
                        x:Name="sahkoposti"
                        Text=""
                        MaxLength="50"
                        TextChanged="sahkoposti_TextChanged"
                        Grid.Row="7"
                        Grid.ColumnSpan="2" 
                        HorizontalOptions="FillAndExpand"
                        IsReadOnly="True"/>

                    <Label
                         Text="Mökin nimi"
                         Margin="0,5,0,0"
                         Grid.ColumnSpan="2"
                         Grid.Row="8"/>

                    <Picker 
                        x:Name="mokin_nimi"
                        Grid.Row="9"
                        Grid.ColumnSpan="2" 
                        HorizontalOptions="FillAndExpand"
                        ItemsSource="{Binding Mokkis}"
                        ItemDisplayBinding="{Binding Mokkinimi}"/>

                    <Label
                          Text="Postinumero"
                          Margin="0,5,0,0"
                          Grid.Row="10"
                          Grid.Column="0"/>

                    <Entry
                          x:Name="postinumero"
                          Text=""
                        MaxLength="5"
                        TextChanged="postinumero_TextChanged"
                          Grid.Row="11"
                          Grid.Column="0" 
                        IsEnabled="False"
                         IsReadOnly="True"/>

                    <Label
                         Text="Paikkakunta"
                         Grid.Column="1"
                         Grid.Row="10"
                         Margin="0,5,0,0"/>

                    <Entry
                         x:Name="paikkakunta"
                         Text=""
                        TextChanged="paikkakunta_TextChanged"
                         Grid.Column="1"
                         Grid.Row="11"
                         IsEnabled="False"
                        IsReadOnly="True"/>

                    <Label
                        Text="Alku pvm:"
                        Grid.Column="0"
                        Grid.Row="12"
                        Margin="0,5,0,0"/>

                    <DatePicker
                            Grid.Row="13"
                            Grid.Column="0"
                            x:Name="alkupvm"
                            DateSelected="alkupvm_DateSelected"/>

                    <Label
                        Text="Loppu pvm:"
                        Grid.Column="1"
                        Grid.Row="12"
                        Margin="0,5,0,0"/>

                    <DatePicker
                        Grid.Row="13"
                        Grid.Column="1"
                        x:Name="loppupvm"
                        DateSelected="loppupvm_DateSelected"/>

                    <Label
                        Text="Vahvistus pvm:"
                        Grid.Column="0"
                        Grid.Row="14"
                        Margin="0,5,0,0"/>

                    <DatePicker
                            Grid.Row="15"
                            Grid.Column="0"
                            x:Name="vahvistuspvm"
                            DateSelected="vahvistuspvm_DateSelected"/>

                    <Label
                        Text="Varaus pvm:"
                        Grid.Column="1"
                        Grid.Row="14"
                        Margin="0,5,0,0"/>

                    <Entry
                        Text="" 
                        x:Name="varauspvm"
                        Grid.Row="15"
                        Grid.Column="1"
                        IsReadOnly="True"/>

                    <Button
                         x:Name="tallenna"
                         Text="Tallenna"
                         Margin="0,5,0,0"
                         Grid.Row="16"
                         Clicked="tallenna_Clicked"/>

                    <Button
                         x:Name="tyhjenna"
                         Text="Tyhjennä"
                         Margin="0,5,0,0"
                         Grid.Column="1"
                         Grid.Row="16"
                         Clicked="tyhjenna_Clicked"/>

                    <Button
                         x:Name="poista"
                         Text="Poista"
                         Margin="0,5,0,0"
                         Grid.Row="17"
                         Clicked="poista_Clicked"/>
                </Grid>

                <Grid
                     Grid.Column="1"
                     Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label
                         Text="Hae päivämäärällä"
                         HorizontalTextAlignment="Center"
                         VerticalTextAlignment="Center"/>

                    <DatePicker
                        x:Name="hae_varaukset"
                        DateSelected="hae_varaukset_DateSelected"
                        Grid.Column="1"/>

                    <Button
                            x:Name="Hae_varaukset_tyhjenna"
                            Text="Tyhjennä"
                            Clicked="Hae_varaukset_tyhjenna_Clicked"
                            Grid.Column="2"/>
                    <Frame
                         BorderColor="Black"
                         CornerRadius="2"
                         Padding="5"
                         Margin="0,10,0,0"
                         Grid.Row="1"
                         Grid.ColumnSpan="3" 
                         HorizontalOptions="FillAndExpand">

                        <ListView                            
                            x:Name="lista"
                            ItemTapped="lista_ItemTapped"
                            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                            ItemsSource="{Binding Varaukset}">
                            <ListView.Header>
                                <StackLayout Orientation="Horizontal" Padding="10">
                                    <Label Text="Id" WidthRequest="50" FontAttributes="Bold"/>
                                    <Label Text="Sukunimi" WidthRequest="125" FontAttributes="Bold"/>
                                    <Label Text="Mokin nimi" WidthRequest="125" FontAttributes="Bold"/>
                                    <Label Text="Varaus alku" WidthRequest="125" FontAttributes="Bold"/>
                                    <Label Text="Varaus loppu" WidthRequest="125" FontAttributes="Bold"/>
                                </StackLayout>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal" Padding="10">
                                            <Label Text="{Binding VarausId}" WidthRequest="50"/>
                                            <Label Text="{Binding Asiakas.Sukunimi}" WidthRequest="125"/>
                                            <Label Text="{Binding Mokki.Mokkinimi}" WidthRequest="125"/>
                                            <Label Text="{Binding VarattuAlkupvm, StringFormat='{0:dd.MM.yyyy}'}" WidthRequest="125"/>
                                            <Label Text="{Binding VarattuLoppupvm, StringFormat='{0:dd.MM.yyyy}'}" WidthRequest="125"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Frame>
                </Grid>


            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>