<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ohj1v0._1.TeeUusiVaraus"
             Title="Tee uusi varaus">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Grid
                Padding="10"
                x:Name="entry_grid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid 
                    Padding="10"
                    x:Name="entry_grid2"
                    Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Text="Alue"/>

                    <Picker 
                    x:Name="alue_nimi" 
                    Grid.Row="1"
                    SelectedIndexChanged="alue_nimi_SelectedIndexChanged"
                    ItemsSource="{Binding Alues}"
                    ItemDisplayBinding="{Binding Nimi}">
                    </Picker>

                    <Label
                        Text="Alku päivämäärä"
                        Grid.Row="2"
                        Margin="0,5,0,0"/>

                <Label
                    Text="Loppu päivämäärä"
                    Margin="0,5,0,0"
                    Grid.Column="1"
                    Grid.Row="2"/>

                <DatePicker
                    Grid.Row="4"
                    x:Name="alkupvm"
                    DateSelected="alkupvm_DateSelected"/>

                    <DatePicker
                    Grid.Row="4"
                    Grid.Column="1"
                    x:Name="loppupvm"
                    DateSelected="loppupvm_DateSelected"/>

                    <Label                    
                    Text="Henkilömäärä"
                    Margin="0,5,0,0"
                    Grid.Row="5"/>

                <Picker 
                    x:Name="henkilomaara" 
                    Grid.Row="6"
                    SelectedIndexChanged="henkilomaara_SelectedIndexChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>1</x:String>
                            <x:String>2</x:String>
                            <x:String>3</x:String>
                            <x:String>4</x:String>
                            <x:String>5</x:String>
                            <x:String>6</x:String>
                            <x:String>7</x:String>
                            <x:String>8</x:String>
                            <x:String>9</x:String>
                            <x:String>10</x:String>
                            <x:String>11</x:String>
                            <x:String>12</x:String>
                            <x:String>13</x:String>
                            <x:String>14</x:String>
                            <x:String>16</x:String>
                            <x:String>17</x:String>
                            <x:String>18</x:String>
                            <x:String>19</x:String>
                            <x:String>20</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                    <Label
                        Text="Varaus pvm:"
                        Margin="0,5,0,0"
                        Grid.Row="5"
                        Grid.Column="1"/>
                    
                    <Entry
                        Text="" 
                        x:Name="varauspvm"
                        Grid.Row="6"
                        Grid.Column="1"
                        IsReadOnly="True"/>

                <Label                    
                    Text="Valitse mökki"
                    Margin="0,5,0,0"
                    Grid.Row="7"/>

                <Frame                    
                    BorderColor="Black"
                    CornerRadius="2"
                    Padding="5"
                    Grid.Row="8"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="FillAndExpand">

                    <ListView     
                        x:Name="mokki_lista"
                        ItemTapped="mokki_lista_ItemTapped"
                        ItemsSource="{Binding Mokkis}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal" Padding="10">
                                            <Label Text="{Binding MokkiId}" WidthRequest="100"/>
                                            <Label Text="{Binding Mokkinimi}"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                </Frame>

                <Label                    
                    Text="Valitse lisäpalvelu"
                    Margin="0,5,0,0"
                    Grid.Row="9"/>

                <Frame                    
                    BorderColor="Black"
                    CornerRadius="2"
                    Padding="5"
                    Grid.Row="10"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="FillAndExpand">

                    <Grid 
                        Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />

                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label                    
                            Text="Lukumäärä"                            
                            Margin="0,5,0,0"
                            Grid.Column="1"/>
                        

                        <Label                    
                            Text="Palvelu 1"
                            VerticalOptions="Center"
                            Margin="0,5,20,0"
                            HorizontalOptions="Center"
                            Grid.Row="1"/>

                        <Entry
                            x:Name="palvelu_lkm"
                            Grid.Column="1"
                            Grid.Row="1"
                            HorizontalOptions="Start"
                            TextChanged="palvelu_lkm_TextChanged"/>
                    </Grid>
                </Frame>

                <Button
                x:Name="uusi_asiakas"
                Text="Uusi asiakas"
                Margin="0,5,0,0"
                Grid.Row="11"
                Clicked="uusi_asiakas_Clicked"/>

                <Button
                x:Name="vanha_asiakas"
                Text="Vanha asiakas"
                Margin="0,5,0,0"
                Grid.Row="11"
                Grid.Column="1"
                Clicked="vanha_asiakas_Clicked"/>

            </Grid>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>